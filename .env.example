# Database
DATABASE_URL=postgresql://user:password@localhost:5432/inversorai

# Supabase (Backend - service role)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase (Frontend - public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# API
NEXT_PUBLIC_API_URL=http://localhost:3001

# AI Provider (OpenAI)
OPENAI_API_KEY=your-openai-api-key

# Environment (development | production)
# Production enforces stricter guardrails
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for browser requests
# - In production: REQUIRED. Server fails to start if not set.
# - In development: Optional. Defaults to http://localhost:3000,http://127.0.0.1:3000
# - Wildcard "*" is NOT allowed in production for security.
# Examples:
#   Local development: CORS_ORIGINS=http://localhost:3000
#   Production: CORS_ORIGINS=https://myapp.com,https://admin.myapp.com
CORS_ORIGINS=

# Market Data Provider
# REAL = Yahoo Finance (required in production)
# FAKE = Test data only (allowed in development/test only)
MARKET_DATA_PROVIDER=REAL

# Bootstrap Admin (for initial deployment)
INITIAL_ADMIN_EMAIL=
INITIAL_ADMIN_INVITE_REDIRECT_TO=

# Admin User Management (optional)
ADMIN_STEP_UP_MAX_AGE_SECONDS=
PASSWORD_RESET_REDIRECT_TO=
